<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/night_background_color</item>
        <item name="colorPrimaryDark">@color/sub_back_color</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/night_background_color</item>
        <item name="android:colorButtonNormal">@color/sub_back_color</item>
        <item name="android:colorAccent">@color/sub_back_color</item>

        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">

        <item name="android:windowBackground">@drawable/dialog_black_style</item>

        <item name="android:windowTitleStyle">@style/MyDialogTheme.WindowTitle</item>

        <item name="android:paddingTop">3dp</item>
        <item name="backgroundColor">@color/night_background_color</item>

        <item name="android:textAlignment">center</item>
        <item name="android:colorAccent">@color/blue_button_selected</item>

    </style>


    <style name="MyDialogTheme.WindowTitle">
        <item name="android:textSize"> 18dp</item>
        <item name="android:textStyle">bold</item>

    </style>



</resources>