<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/gray_button_color</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StyleProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_bg</item>
    </style>
    <style name="DayNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/slogan</item>
        <item name="windowSplashScreenAnimationDuration">300</item>

    </style>


</resources>
