<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_button_selected</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/gray_button_color</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="StyleProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_bg</item>
    </style>
    <style name="DayNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@drawable/dialog_style</item>

        <item name="android:windowTitleStyle">@style/MyDialogTheme.WindowTitle</item>

        <item name="android:paddingTop">3dp</item>
        <item name="backgroundColor">@color/white</item>

        <item name="android:textAlignment">center</item>
        <item name="android:colorAccent">@color/blue_button_selected</item>

    </style>


    <style name="MyDialogTheme.WindowTitle">
        <item name="android:textSize"> 18dp</item>
        <item name="android:textStyle">bold</item>


    </style>





</resources>
